        android:layout_height="85dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        app:layout_constraintTop_toBottomOf="@id/ivTopBar"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:cardBackgroundColor="@color/blue"
        app:cardCornerRadius="18dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/ivIconScroll"
                android:layout_width="15dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:src="@drawable/ic_scroll" />

            <androidx.cardview.widget.CardView
                android:layout_width="150dp"
                android:layout_height="70dp"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="5dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="18dp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/ivIconGopay"
                        android:layout_width="80dp"
                        android:layout_height="20dp"
                        android:layout_marginTop="5dp"
                        android:src="@drawable/ic_gopay"
                        />

                    <TextView
                        android:id="@+id/tvSaldoGopay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:layout_marginLeft="12dp"
                        android:text="Rp109.048"
                        android:textStyle="bold"
                        android:textSize="15dp"
                        />

                    <TextView
                        android:id="@+id/tvRiwayatGopay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:layout_marginLeft="12dp"
                        android:text="Klik dan cek riwayat"
                        android:textStyle="bold"
                        android:textSize="12dp"
                        android:textColor="@color/green"
                        />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageButton
                    android:id="@+id/ibIconBayar"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="20dp"
                    android:src="@drawable/ic_bayar"
                    android:layout_marginTop="15dp"/>
                <TextView
                    android:id="@+id/tvBayarGopay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bayar"
                    android:textColor="@color/white"
                    android:layout_marginLeft="22dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageButton
                    android:id="@+id/ibIconIsi"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="20dp"
                    android:src="@drawable/ic_isi"
                    android:layout_marginTop="15dp"/>
                <TextView
                    android:id="@+id/tvIsiGopay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Isi Saldo"
                    android:textColor="@color/white"
                    android:layout_marginLeft="15dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageButton
                        android:id="@+id/ibIconExplore"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="15dp"
                        android:src="@drawable/ic_explore"
                        android:layout_marginTop="15dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"/>
                    <TextView
                        android:id="@+id/tvExplore"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Eksplor"
                        android:textColor="@color/white"
                        android:layout_marginLeft="12dp"
                        app:layout_constraintTop_toBottomOf="@id/ibIconExplore"
                        app:layout_constraintLeft_toLeftOf="parent"/>
                    <ImageView
                        android:id="@+id/ivNotifikasiExplore"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/rounded_red"
                        android:layout_marginLeft="38dp"
                        android:layout_marginTop="12dp"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>
                    <TextView
                        android:id="@+id/tvNotifikasiExplore"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginLeft="42dp"
                        android:layout_marginTop="9dp"
                        android:text="6"
                        android:textSize="18sp"
                        android:textColor="@color/white"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <ImageView
