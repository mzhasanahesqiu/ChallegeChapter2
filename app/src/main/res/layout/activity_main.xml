                    android:id="@+id/pbJumlahXP"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_marginLeft="10dp"
                    android:layout_width="270dp"
                    android:layout_height="wrap_content"
                    android:max="100"
                    android:progress="10" />
                <TextView
                    android:id="@+id/tvHartaKarun"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="âŒ› Harta Karun bentar lagi hilang"
                    android:textSize="10sp"
                    android:textStyle="bold"/>
            </LinearLayout>
            <ImageView
                android:id="@+id/ivIconPanah"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginTop="14dp"
                android:layout_marginLeft="25dp"
                android:src="@drawable/ic_panah"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tvAksesCepat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="10dp"
        android:text="Akses Cepat"
        android:textStyle="bold"
        android:textSize="17sp"
        app:layout_constraintTop_toBottomOf="@id/tvTextGoMart"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="35dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        app:layout_constraintTop_toBottomOf="@id/tvAksesCepat"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="18dp">
