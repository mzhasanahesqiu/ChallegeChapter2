        android:layout_width="0dp"
        android:layout_height="165dp"
        android:layout_marginTop="85dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        app:layout_constraintTop_toBottomOf="@id/tvAksesCepat"
