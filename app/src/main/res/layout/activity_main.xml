        app:layout_constraintLeft_toLeftOf="@id/ivIconGoFood"/>

    <TextView
        android:id="@+id/tvTextGoSend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="7dp"
        android:text="GoSend"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/ivIconGoSend"
        app:layout_constraintLeft_toLeftOf="@id/ivIconGoSend"/>

    <ImageView
        android:id="@+id/ivIconGoMart"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="30dp"
        android:src="@drawable/ic_gomart"
        app:layout_constraintTop_toBottomOf="@id/tvTextGoRide"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <ImageView
        android:id="@+id/ivIconGoPulsa"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/ic_gopulsa"
        app:layout_constraintTop_toBottomOf="@id/tvTextGoCar"
        app:layout_constraintLeft_toLeftOf="@id/ivIconGoCar"/>

    <ImageView
        android:id="@+id/ivIconCheckIn"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/ic_checkin"
        app:layout_constraintTop_toBottomOf="@id/tvTextGoFood"
        app:layout_constraintLeft_toLeftOf="@id/ivIconGoFood"/>

    <ImageView
        android:id="@+id/ivIconLainnya"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/ic_lainnya"
        app:layout_constraintTop_toBottomOf="@id/tvTextGoSend"
        app:layout_constraintLeft_toLeftOf="@id/ivIconGoSend"/>

    <TextView
        android:id="@+id/tvTextGoMart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="35dp"
        android:text="GoMart"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/ivIconGoMart"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/tvTextGoPulsa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="2dp"
        android:text="GoPulsa"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/ivIconGoPulsa"
        app:layout_constraintLeft_toLeftOf="@id/ivIconGoPulsa"/>

    <TextView
        android:id="@+id/tvTextCheckIn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="2dp"
        android:text="Check In"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/ivIconCheckIn"
        app:layout_constraintLeft_toLeftOf="@id/ivIconCheckIn"/>

    <TextView
        android:id="@+id/tvTextLainnya"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:text="Lainnya"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/ivIconLainnya"
        app:layout_constraintLeft_toLeftOf="@id/ivIconLainnya"/>

    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        app:layout_constraintTop_toBottomOf="@id/tvTextGoMart"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="18dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/ivIconStar"
                android:layout_width="49dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                android:src="@drawable/ic_star" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tvTextXP"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="193 XP lagi ada Harta Karun"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:layout_marginLeft="10dp"/>
